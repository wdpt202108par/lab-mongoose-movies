<h2>Create movie</h2>
<form method="POST" action="/movies">
    <label>title</label>
    <input type="text" name="title">

    <label>genre</label>
    <input type="text" name="genre">

    <label>plot</label>
    <input type="text" name="plot">

    <label>cast</label>
    <select name="cast" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <button>Create</button>
</form>