<h2>New Celebrities</h2>

<form action="/movies/new" method="POST">
    <label>
        Title:
        <input type="text"  name="title">
    </label>
    

    <label>
        Genre:
        <input type="text"  name="genre">
    </label>
    

    <label>
        Plot:
        <input type="text" name="plot">
     </label>
    

    <label>
        Cast:
        <select name="cast" multiple>
            {{#each celebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </label>

    <button type="submit">Create new Movie</button>
</form>
