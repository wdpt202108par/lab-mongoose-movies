<h2>Add a movie</h2>

<form action="/movies" method="POST">
  <label>
      Title
        <input type="text" name="title">
  </label>

  <label>
      Genre
        <input type="text" name="genre">
  </label>

  <label>
      Plot
        <textarea name="plot"></textarea>
  </label>

  <label>
      Cast
      <select name="cast" multiple>
          {{#each celebrities}}
            <option value="{{id}}">{{name}}</option>
          {{/each}}
      </select>
  </label>

  <button>Add movie</button>
</form>